<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="translationZ"
                android:duration="200"
                android:valueTo="8dp"
                android:valueType="floatType"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:propertyName="translationZ"
                android:duration="200"
                android:valueTo="0dp"
                android:valueType="floatType"/>
        </set>
    </item>
</selector>
