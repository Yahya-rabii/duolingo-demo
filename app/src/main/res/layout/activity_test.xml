<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/test_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/test_title_textview"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:text="Test Score"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/test_instructions_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_instructions"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <com.example.dldemo.ScoreView
            android:id="@+id/scoreView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/scoreper"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:text="0 %"
            android:textSize="24sp"
            android:textColor="@color/teal_200"
            android:textStyle="bold" />

        <Button
            android:id="@+id/try_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Again"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
