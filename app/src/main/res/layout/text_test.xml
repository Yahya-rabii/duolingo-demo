<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find the Errors and write them with this sepataor -"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_with_errors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:layout_marginTop="32dp"
        android:text="@string/this_text_has_some_errors" />

    <EditText
        android:id="@+id/correction_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_with_errors"
        android:layout_marginTop="32dp"
        android:hint="@string/enter_your_correction_here"
        android:inputType="text" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="139dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="587dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_bg"
        android:onClick="onSubmitButtonClick"
        android:padding="12dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>
